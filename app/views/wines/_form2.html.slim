= form_for @rating, :html => { :id => "rating" } do |f|
  - if @rating.errors.any?
    #error_explanation
      h2 = "#{pluralize(@wine.errors.count, "error")} prohibited this wine from being saved:"
      ul
        - @rating.errors.full_messages.each do |message|
          li = message
  .star
  .hidden#oldrating data-rating="#{@rating.stars}"
  /= f.number_field :stars, :placeholder=> "1-5, 5 being highest"
  = f.hidden_field :user_id, :value => current_user.id
  = f.hidden_field :wine_id, :value => @wine.id
  br
  = f.text_area :review, :placeholder=>"What'd you think of the wine? (optional)"
  .actions = f.submit 'Save', :class=> "btn"
