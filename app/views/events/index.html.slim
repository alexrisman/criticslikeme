h1 ="Welcome #{current_user.first_name}"


-if @events.length < 1
  h2 
    span.padleft You haven't joined any events yet. Here's what's happening on Confr.
  ul.nav.nav-pills.nav-stacked#listevents
    -@all_events.each do |e|
      li 
        h3
          a href==join_event_path(e.token)
            -if e.admin == current_user
              =image_tag "icon_crown.png", :class=>"crown", :alt=>"You created this event!"
            =e.name
            .small=e.date
            =image_tag(e.banner.url)
  /-if Event.last
    .alert 
      h4
        | Would you like to join the 
        =link_to "Kellogg Tech Conference", join_event_path(Event.last.token)
        | ? 
-else
  h2 
    span.padleft Upcoming Events
  ul.nav.nav-pills.nav-stacked#listevents
    -@upcoming_events.each do |e|
      li 
        h3
          a href==event_path(e)
            -if e.admin == current_user
              =image_tag "icon_crown.png", :class=>"crown", :alt=>"You created this event!"
            =e.name
            .small=e.date
            =image_tag(e.banner.url)
  h2 
    span.padleft Past Events
  ul.nav.nav-pills.nav-stacked#listevents
    -@past_events.each do |e|
      li 
        h3
          a href==event_path(e)
            -if e.admin == current_user
              =image_tag "icon_crown.png", :class=>"crown", :alt=>"You created this event!"
            =e.name
            .small=e.date
            =image_tag(e.banner.url)
  h2 
    span.padleft Other events on Confr
  ul.nav.nav-pills.nav-stacked#listevents
    -@other_events.each do |e|
      li 
        h3
          a href==join_event_path(e.token)
            -if e.admin == current_user
              =image_tag "icon_crown.png", :class=>"crown", :alt=>"You created this event!"
            =e.name
            .small=e.date
            =image_tag(e.banner.url)

/= link_to 'Create a new Event', new_event_path
